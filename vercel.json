{
  "version": 2,
  "builds": [
    {
      "src": "api_server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "api_server.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "API_KEY": "QUARX_API_SECRET_2024"
  }
}

